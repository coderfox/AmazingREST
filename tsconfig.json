{
    "version": "1.5.0-beta",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "isolatedModules": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true
    },
    "filesGlob": [
        "./**/*.ts",
        "./**/*.tsx",
        "!./node_modules/**/*"
    ],
    "files": [
        "./app.ts",
        "./lib/request.ts",
        "./references.d.ts",
        "./routes/index.ts",
        "./test/_server.ts",
        "./typings/body-parser/body-parser.d.ts",
        "./typings/chai/chai.d.ts",
        "./typings/config/config.d.ts",
        "./typings/cookie-parser/cookie-parser.d.ts",
        "./typings/debug/debug.d.ts",
        "./typings/express/express.d.ts",
        "./typings/form-data/form-data.d.ts",
        "./typings/jake/jake.d.ts",
        "./typings/mime/mime.d.ts",
        "./typings/mocha/mocha.d.ts",
        "./typings/mongodb/mongodb.d.ts",
        "./typings/morgan/morgan.d.ts",
        "./typings/node/node.d.ts",
        "./typings/q/Q.d.ts",
        "./typings/request/request.d.ts",
        "./typings/serve-favicon/serve-favicon.d.ts",
        "./typings/serve-static/serve-static.d.ts",
        "./typings/tsd.d.ts"
    ]
}
